{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./.electron",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": ["src/electron/**/*", "src/types/electron.d.ts"],
  "exclude": ["node_modules"]
}
